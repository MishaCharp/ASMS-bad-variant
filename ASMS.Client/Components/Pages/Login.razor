@page "/Login"
@inject IAccessTokenProvider AccessTokenProvider
@inject IAuthorizationService AuthorizationService
@rendermode InteractiveServer


<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="w-50">
        <div class="form-group mt-3">
            <label for="login">Логин</label>
            <input @bind="@login" class="form-control" placeholder="Введите логин">
        </div>
        <div class="form-group mt-3">
            <label for="password">Пароль</label>
            <input @bind="@password" type="password" class="form-control" id="password" placeholder="Введите пароль">
        </div>
        <div class="form-group mt-3">
            <button onclick="@LoginClick" class="btn btn-primary mb-3">Войти</button>
        </div>
        
    </div>
</div>

@code
{
    private string login { get; set; } = "";
    private string password { get; set; } = "";

    public void LoginClick()
    {
        AuthorizationService.Authorize(login, password);
    }
}